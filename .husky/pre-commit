#!/usr/bin/env node

import { execSync } from 'child_process';

try {
  console.log('🔄 Running pre-commit hooks...');

  // 运行版本递增
  execSync('npm run pre-commit', { stdio: 'inherit' });

  // 运行测试
  execSync('npm test', { stdio: 'inherit' });

  console.log('✅ Pre-commit hooks completed successfully');
} catch (error) {
  console.error('❌ Pre-commit hooks failed:', error.message);
  process.exit(1);
}
